<article class="post">
  <div class="title">
    <h2> {{post.title}}</h2>
    <span>{{post.post_content}}</span>
  </div>
  <div class="meta">
    {{post.User.username}} on {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

